doctype html
html
	head
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.3/animate.min.css')
		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js', type='text/javascript')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js', type='text/javascript')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js', type='text/javascript')
		script(src='https://cdn.jsdelivr.net/npm/chart.js@2.8.0')
	body
		h1 Computer Vision
		ul.menu
			li
				a(href='/') Summary
			li
				a.active(href='/showcharts') Charts
			li
				a(href='#') Statistics
			li
				a(href='#') Co-ordinates
			li.slider
		.container
			.row
				canvas#myChart
		
		script.
			var entered= #{people_entered}
			var exited= #{people_exit}
			var ctx = document.getElementById('myChart').getContext('2d');
			var myChart = new Chart(ctx, {
			type: 'doughnut',
			data: {
			labels: ['Entered', 'Exited'],
			datasets: [{
			data: [entered, exited],
			backgroundColor: [
			'rgba(75, 192, 192, 1)',
			'rgba(255, 99, 132, 1)',
			'rgba(54, 162, 235, 1)',
			'rgba(255, 206, 86, 1)',
			'rgba(153, 102, 255, 1)',
			'rgba(255, 159, 64, 1)'
			],
			borderWidth: 1
			}]
			},
			});
